<table class="table table-striped table-hover" id="table-user-list" data-controller="user">
    <thead>
        <tr>
            <th class="text-center" width="5%">
                <div class="form-check">
                    <input class="form-check-user" type="checkbox" value="all" data-action="click->user#select_all">
                </div>
            </th>
            <th class="text-center" width="10%">Picture</th>
            <th class="text-start" width="45%">ชื่อ-นามสกุล</th>
            <th class="text-start" width="20%">ชั้น</th>
            <th class="text-center" width="20%">Action</th>
        </tr>
    </thead>
    <tbody>
        <% @user.each do |u| %>
            <tr>
                <td>
                    <div class="form-check">
                        <input class="form-check-user" type="checkbox" value="<%= u.id %>" data-action="change->user#checked_select">
                    </div>
                </td>
                <td></td>
                <td class="text-start"><%= u.firstname %> <%= u.lastname%></td>
                <td class="text-start">ม. <%= u.classroom %></td>
                <td class="text-center">
                    <%= button_tag class: "btn btn-primary text-center btn-class-up", 'data-bs-toggle': "modal", 'data-bs-target': "#classUpModal", value: "#{u.id}", 'data-action': "click->user#set_id_classup" do %>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-90deg-up" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M4.854 1.146a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L4 2.707V12.5A2.5 2.5 0 0 0 6.5 15h8a.5.5 0 0 0 0-1h-8A1.5 1.5 0 0 1 5 12.5V2.707l3.146 3.147a.5.5 0 1 0 .708-.708z"/>
                        </svg>
                        เลื่อนชั้น
                    <% end %>
                    <%= button_tag class: "btn btn-primary text-center btn-delete", 'data-bs-toggle': "modal", 'data-bs-target': "#confirmDeleteModal", value: "#{u.id}", 'data-action': "click->user#set_id_delete" do %>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                            <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0"/>
                        </svg>
                        ลบ
                    <% end %>
                    
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

<div data-controller="user">
    <%= render partial: "dialog_set_class" %>
    <%= render partial: "dialog_confirm_delete" %>
</div>